<Program>               ::= <Module>

<Module>                ::= <Identifier> <Block>

<Block>                 ::= "{" <Statement>* "}"

<Statement>             ::= <If>
                        |   <Expression> ";"
                        |   <Print> ";"
                        |   <Declaration> ";"
                        |   <Assignment> ";"

<Assignment>            ::= <Identifier> "=" <Expression>

<Declaration>           ::= <Identifier> ":" <Type> ("=" <Expression>)?

<Type>                  ::= <Primitive Type>
<Primitive Type>        ::= "int"
                        |   "boolean"
                        |   "string" <-- FIXME: string should be a reference type

<Print>                 ::= "println" (<String>|<Expression>)

<If>                    ::= "if" "(" <Expression> ")" <Block> <Else>?
<Else>                  ::= "else" (<If>|<Block>)

<Expression>            ::= <Term> ((+|-|\|\|<Relational Operator>) <Expression>)?
<Term>                  ::= <Factor> ((*|/|&&) <Term>)?
<Factor>                ::= [!-]? <Factor>
                        |   "(" <Expression> ")"
                        |   <Value>

<Value>                 ::= <Number>
                        |   <Identifier>
                        |   <String>

<Number>                ::= [0-9]+(\.[0-9]+)?
<Identifier>            ::= [A-Za-z][A-Za-z0-9]*
<String>                ::= ^"[^"\\]*(\\.[^"\\]*)*"$

<Relational Operator>   ::= "=="
                        |   "!="
                        |   ">="
                        |   "<="
                        |   ">"
                        |   "<"
