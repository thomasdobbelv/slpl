<Program>               ::= <Module>

<Module>                ::= "module" <Id> <Block>

<Block>                 ::= "{" <Statement>* "}"

<Statement>             ::= <If>
                        |   <While>
                        |   <For>
                        |   (<Call>|<Print>|<Declaration>|<Assignment>|<Return Statement>) ";"

<Return Statement>      ::= "return" <Rvalue>

<Lambda Function>       ::= <Parameter List> "->" <Type> <Block>

<Parameter List>        ::= "(" (<Parameter> ",")* ")"
<Parameter>             ::= <Declaration>

<For>                   ::= "for" "(" <Declaration>? ";" <Expression>? ";" <Assignment>? ")" <Block>

<While>                 ::= "while" "(" <Expression> ")" <Block>

<Assignment>            :== <Prefix Operator> <Id>
                        |   <Id> <Postfix Operator>
                        |   <Id> <Assignment Operator> <Rvalue>

<Rvalue>                ::= <Lambda Function>
                        |   <Expression>

<Prefix Operator>       ::= "++"
                        |   "--"

<Postfix Operator>      ::= "++"
                        |   "--"

<Assignment Operator>   ::= "+="
                        |   "-="
                        |   "*="
                        |   "/="
                        |   "="

<Call>            ::= "(" (<Expression> ",")* ")"

<Declaration>           ::= <Id> ":" <Type> ("=" <Rvalue>)?

<Type>                  ::= <Id>

<Print>                 ::= println|print (<String>|<Expression>)

<If>                    ::= "if" "(" <Expression> ")" <Block> <Else>?
<Else>                  ::= "else" (<If>|<Block>)

<Expression>            ::= <Term> ((+|-|\|\||<Relational Operator>) <Expression>)?
<Term>                  ::= <Factor> ((*|/|&&) <Term>)?
<Factor>                ::= [!-] <Factor>
                        |   "(" <Expression> ")"
                        |   <Call>
                        |   <Value>

<Call>  ::= <Id> "(" (<Expression> ",")* ")"

<Value>                 ::= <Num>
                        |   <Boolean>
                        |   <String>
                        |   <Null>

<Num>                ::= [0-9]+(\.[0-9]+)?
<Boolean>               ::= true|false
<String>                ::= ^"[^"\\]*(\\.[^"\\]*)*"$
<Null>                  ::= "null"
<Id>                    ::= [A-Za-z][A-Za-z0-9]*

<Relational Operator>   ::= "=="
                        |   "!="
                        |   ">="
                        |   "<="
                        |   ">"
                        |   "<"
